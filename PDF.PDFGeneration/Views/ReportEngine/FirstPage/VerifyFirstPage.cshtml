@using PDF.PDFGeneration.Helper
@model PDF.Models.ViewModels.VerifyViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Test</title>
    @if (Model.Mode == 2)
    {
        <link rel="stylesheet" href="~/css/bootstrap.min.css" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/custom/verify/verify-cover.css" crossorigin="anonymous">
    }
    else{
        <link rel="stylesheet" href="css/bootstrap.min.css" crossorigin="anonymous">
        <link rel="stylesheet" href="css/custom/verify/verify-cover.css" crossorigin="anonymous">
    }
    
</head>
<body>
    <div class="cover-page verify-cover-page">
        <div class="main-container container">
            <div class="row date-heading">
                <div class="col-lg-5">
                </div>
                <div class="col-lg-7">
                    <h2>
                        <span class="float-right">@DateTime.UtcNow.ToString("dd MMMM yyyy")</span>
                    </h2>
                    <h2> <span class="float-right"> at @DateTime.UtcNow.ToString("hh:mm") UTC</span></h2>
                </div>
            </div>

            <div class="row name-heading">
                <div class="col-lg-12">
                    <h2>
                        Customer report for
                    </h2>
                    <h2>
                        @Model.CustomerInfo.PersonalDetails.FullName()
                    </h2>
                </div>
            </div>
            <div class="row reference-section">
                <div class="col-lg-6">
                </div>
                <div class="col-lg-6">
                    <p class="mb-0">Customer reference</p>
                    <p>@Model.CustomerInfo.PersonalDetails.CustomerReference</p>
                    <p class="mb-0">Application reference</p>
                    <p>@Model.MandateReference</p>
                    @if (!string.IsNullOrEmpty(Model.ConsultantName))
                    {
                        <p class="mb-0">Consultant</p>
                        <p>@Model.ConsultantName</p>
                    }
                </div>
            </div>
            <div class="row footer-section">
                <div class="col-lg-6">
                    <img src="images/verify-logo-white-orange.png" />
                </div>
                <div class="col-lg-3">
                    <p class="mb-0">Created for</p>
                </div>
                <div class="col-lg-3">
                    <p>@Model.TenantName</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
@model Tiller.WXL.Models.ViewModels.ISATransferViewModel

@{
    ViewBag.Title = "ISA Transfer PDF";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.cdnfonts.com/css/roboto" rel="stylesheet">
    @*<link href="https://db.onlinewebfonts.com/c/62c0135163427c652ae397f327f85010?family=Museo+Sans" rel="stylesheet" type="text/css" />*@

    <style>
        @Html.Raw(Model.Css)
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="container-fluid">
            <h1 class="text-center header-title">Junior ISA Transfer in Application</h1>
            <article>
                <p>Application Start Date/Time: @Model.ISATransfer.ApplicationStartDate.ToString("dd/MM/yyyy '-' HH:mm '-' 'GMT'")</p>

                <div class="section-one">
                    <div class="sub-heading">
                        <h4>Applicant Details</h4>
                    </div>
                    <div class="row-section">
                        <div class="col-content">
                            <b>Title</b>
                            <p>@Model.ISATransfer.Title</p>
                            <b>First name(s)</b>
                            <p>@Model.ISATransfer.FirstName</p>
                            <b>Date of birth</b>
                            <p>@Model.ISATransfer.DateOfBirth.ToString("dd/MM/yyyy")</p>
                            <b>National Insurance No.</b>
                            <p>@Model.ISATransfer.NationalInsuranceNumber</p>
                        </div>
                        <div class="col-content">
                            <b>Surname</b>
                            <p class="surname-col">@Model.ISATransfer.LastName</p>
                            <b>Nationality</b>
                            <p>@Model.ISATransfer.Nationality</p>
                            <b>Email address</b>
                            <p>@Model.ISATransfer.EmailAddress</p>
                        </div>
                    </div>
                    <div>
                        <b>Address</b>
                        <p>@Model.ISATransfer.Address</p>
                    </div>
                    <div class="row-section">
                        <div class="col-content">
                            <b>Post Code</b>
                            <p>@Model.ISATransfer.PostZipCard</p>
                            <b>Primary Contact Number</b>
                            <p>@Model.ISATransfer.PhoneNumber</p>
                        </div>
                        <div class="col-content">
                            <b>Country</b>
                            <p>@Model.ISATransfer.CountryName</p>
                        </div>
                    </div>
                </div>

                <div class="section-two">
                    <div class="sub-heading">
                        <h4>Child Details</h4>
                    </div>
                    <div class="row-section">
                        <div class="col-content">
                            <b>Title</b>
                            <p>@Model.ISATransfer.ChildTitle</p>
                            <b>First name(s)</b>
                            <p>@Model.ISATransfer.ChildFirstName</p>
                            <b>Date of birth</b>
                            <p>@Model.ISATransfer.ChildDateOfBirth.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-content">
                            <b>Surname</b>
                            <p class="surname-col">@Model.ISATransfer.ChildLastName</p>
                            <b>Nationality</b>
                            <p>@Model.ISATransfer.ChildNationality</p>
                        </div>
                    </div>
                    <div>
                        <b>Address</b>
                        <p>@Model.ISATransfer.ChildAddress</p>
                    </div>
                    <div class="row-section">
                        <div class="col-content">
                            <b>National Insurance No.</b>
                            <p>@(string.IsNullOrEmpty(Model.ISATransfer.ChildNationalInsuranceNumber) ? "-" : Model.ISATransfer.ChildNationalInsuranceNumber)</p>
                            <b>Relationship to investor</b>
                            <p>@Model.ISATransfer.RelationshipTypeName</p>
                        </div>
                        <div class="col-content">
                            @if (string.IsNullOrEmpty(Model.ISATransfer.ChildNationalInsuranceNumber))
                            {
                                <b>Child does not have NI number </b>
                                <p>Child has no NI Number</p>
                            }
                        </div>
                    </div>
                </div>
                <div style="page-break-after:always">&nbsp;</div>
                <div class="section-three">
                    <div class="sub-heading">
                        <h4>Existing Provider</h4>
                    </div>
                    <div>
                        <b>Plan Manager</b>
                        <p>@Model.ISATransfer.ProviderRegisteredName</p>
                        <b>Existing Manager Address</b>
                        <p>@Model.ISATransfer.ProviderAddress</p>
                    </div>
                    <div class="row-section">
                        <div class="col-content">
                            <b>Estimated Transfer Value</b>
                            <p>£@Model.ISATransfer.TransferValue.ToString("N2")</p>
                            <b>Account Type</b>
                            <p>@Model.ISATransfer.IsaTypeName</p>
                        </div>
                        <div class="col-content">
                            <b>Account Reference</b>
                            <p>@Model.ISATransfer.TransferReference</p>
                        </div>
                    </div>
                </div>

                <div class="section-four">
                    <div class="sub-heading">
                        <h4>Authorisation and Declaration</h4>
                    </div>
                    <div class="row-section">
                        <div class="col-content-2">
                            <p>@Model.ISATransfer.IsaTransferTypeName</p>
                        </div>
                        <div class="col-content-8">
                            <p>I authorise Pershing Securities plc to transfer the full balance of my existing @Model.ISATransfer.IsaTypeName. All holdings are to be sold and transferred as cash with immediate effect. </p>
                        </div>
                        <div class="col-content-2">
                            <p>@Model.ISATransfer.TransferDate.ToString("yyyy-MM-dd HH:mm:ss 'GMT'")</p>
                        </div>
                    </div>

                    <div class="declaration">
                        <div class="declaration-title"><h4>Declaration</h4></div>
                        <div class="declaration-content">
                            <p>The child named above will be the beneficial owner of the account investments I declare that:</p>
                            <ul>
                                <li>I am 16 years of age or over.</li>
                                <li>I am the child/I have parental responsibility for that child (delete which does not apply).</li>
                                <li>I/the child does not have a Child Trust Fund account (delete if transferring as part of this application).</li>
                                <li>I will be the registered contact for the JISA.</li>
                                <li>The child is resident in the UK, or is a UK Crown servant, a dependant of a UK Crown servant or is married to/in a civil partnership with a UK Crown servant.</li>
                                <li>I have not subscribed and will not subscribe to another JISA of this type for this child.</li>
                                <li>I am not aware that this child has another JISA of this type.</li>
                                <li>I am not aware of other JISA subscriptions that will result in this child exceeding the annual limit.</li>
                                <li>I will not knowingly make subscriptions to JISAs for this child that will result in the subscription limit being exceeded.</li>
                            </ul>
                            <br />
                            <p>I authorise Pershing Securities Limited:</p>
                            <ul>
                                <li>To hold the child’s subscriptions, JISA investments, interest, dividends and any other rights or proceeds in respect of those investments and cash, and to make on the child’s behalf any claims to relief from tax in respect of JISA investments.</li>
                                <li>I agree to the JISA terms and conditions.</li>
                                <li>I have read, understood and agree to Mattioli Woods Client Agreement which incorporates the Pershing Terms of Business.</li>
                                <li>I confirm that to the best of my belief the information in this form is true.</li>
                            </ul>
                        </div>
                        <div class="row-section declaration-footer">
                            <div class="col-content-10">Timestamp</div>
                            <div class="col-content-2">@DateTime.UtcNow.ToString("yyyy.MM.dd HH:mm:ss 'GMT'")</div>
                        </div>
                        <div class="bottom-footer-section"></div>
                    </div>
                    <p>
                        Under the provisions of UK Data Protection law you are entitled to know how we process your personal data and your rights to the management of this information.
                        Details of those rights and how you can exercise them can be found within the Mattioli Woods Privacy Notice,
                        which is available at: <a href="www.mattioliwoods.com/privacy-notice">www.mattioliwoods.com/privacy-notice</a>
                    </p>
                </div>
            </article>
        </div>
    </div>
</body>
</html>